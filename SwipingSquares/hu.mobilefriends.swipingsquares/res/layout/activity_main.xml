<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="hu.mobilefriends.swipingsquares"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/background"
    tools:context=".SwipingSquaresPlayActivity" >

        <TableRow
            android:id="@+id/tableRow1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <include
                android:layout_width="match_parent"
                layout="@layout/status_top" />
                      
        </TableRow>

        <TableRow
            android:id="@+id/tableRow2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical" >

            <hu.mobilefriends.swipingsquares.views.CubeView
                android:id="@+id/cubeview"
                android:layout_width="wrap_content"            	
                android:layout_height="wrap_content"                               
                />

        </TableRow>

        <TableRow
            android:id="@+id/tableRow3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <include
                android:layout_width="fill_parent"
                layout="@layout/buttons_bottom" />
            
        </TableRow>

</TableLayout>